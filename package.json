{
  "name": "redidn-backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch ./src/index.ts",
    "start": "cross-env NODE_ENV=production node ./build/index.js",
    "build": "tsc",
    "lint": "eslint --max-warnings 0 .",
    "format": "prettier --write .",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:reset": "dotenv -e .env.local -- prisma migrate reset --force"
  },
  "prisma": {
    "schema": "src/utils/prisma/schema.prisma",
    "seed": "tsx ./src/utils/prisma/seed.ts"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.11",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "express": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.5.0",
    "zod": "^3.24.2"
  }
}
